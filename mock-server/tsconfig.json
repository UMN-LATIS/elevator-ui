{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler", // Better for modern tooling like tsx
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // tsx handles compilation, no need for tsc output
    "isolatedModules": true, // Better compatibility with tsx
    "verbatimModuleSyntax": false // Allow flexible imports
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "../src/types/index.ts"]
}
